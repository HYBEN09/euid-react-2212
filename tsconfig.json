{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "commonjs",
    "moduleResolution": "node",
  
    
    "typeRoots": ["node_modules/@types", "src/@types"],
    "resolveJsonModule": true,
    "allowJs": false,
    
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },

  "include": ["src"],
  "exclude": [ "build"]
}
